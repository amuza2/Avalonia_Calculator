<Application
    RequestedThemeVariant="Dark"
    x:Class="CalculatorAvaloniaUI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="using:CalculatorAvaloniaUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        
        <!--  Import styles from Styles folder  -->
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/NumberButtonStyles.axaml" />
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/OperatorButtonStyles.axaml" />
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/FunctionButtonStyles.axaml" />
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/MemoryButtonStyles.axaml" />
        <StyleInclude Source="avares://CalculatorAvaloniaUI/Styles/TextBlockStyles.axaml" />
    </Application.Styles>
</Application>